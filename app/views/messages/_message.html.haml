.message_box
  .message_info
    .message_field_info_name
      = message.user.name
    .message_field_info_date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message_field_info_comment
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'message__image' if message.image.present?